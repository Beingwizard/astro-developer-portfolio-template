// Contact function
const contact = (type: ContactType): string => {
    switch (type) {
        case 'github':
            return 'https://github.com/beingwizard';
        case 'twitter':
            return 'https://x.com/wizard_locks';
        case 'linkedIn':
            return 'https://www.linkedin.com/in/laxitpant';
        case 'email':
            return 'lakshitlucky1234@gmail.com';
        default:
            return 'Send fax.';
